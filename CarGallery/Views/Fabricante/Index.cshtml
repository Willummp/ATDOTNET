@model IEnumerable<CarGallery.Models.Fabricante>

@{
    ViewData["Title"] = "Fabricantes";
}

<h1 class="text-center">Fabricantes</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p>
                <a href="@Url.Action("Create")" class="btn btn-primary">Criar novo fabricante</a>
                <a href="@Url.Action("Create", "Carro")" class="btn btn-secondary">Adicionar Carro</a>
            </p>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-info">Editar</a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Detalhes</a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

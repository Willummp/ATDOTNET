<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        padding-top: 20px;
    }

    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        height: 420px;
        color: white;
        text-decoration: none;
        border: 2px solid transparent;
        overflow: hidden; /* Adiciona um overflow para o card para aplicar o efeito de desfoque somente na parte inferior */
    }

        .card:hover {
            border-color: #007bff;
        }

    .card-img-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-body {
        padding: 1.25rem;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
    }

    .card-title {
        font-size: 5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1; /* Certifica-se de que o texto está na frente do efeito de desfoque */
    }

    .card-text {
        color: white;
        font-size: 1.25rem;
        font-weight: 600;
        position: relative;
        z-index: 1; /* Certifica-se de que o texto está na frente do efeito de desfoque */
    }

    .card-body::after {
        content: ""; /* Cria um pseudo-elemento para aplicar o efeito de desfoque */
        position: absolute;
        bottom: 0;
        right: 0;
        width: 60%;
        border-radius: 10px 0 0 0; /* Ajuste conforme necessário */
        height: 40%; /* Altura do desfoque, ajuste conforme necessário */
        background: rgba(0, 0, 0, 0.2); /* Cor e opacidade do desfoque */
        backdrop-filter: blur(10px); /* Aplica o efeito de desfoque */
        z-index: 0; /* Garante que o efeito de desfoque esteja atrás do texto */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container text-center">
    <div class="row">
        @foreach (Carro item in ViewBag.Carros)
        {
            <div class="col">
                <a href="/Carro/Detail/@item.Id" class="card">
                    <img src="@item.Imagem" class="card-img-top" alt="Imagem do carro">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text">@item.DescricaoCurta</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa; /* Cor de fundo cinza claro */
    }

    .container {
        padding-top: 20px;
    }

    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    .card-img-top {
        height: 200px; /* Altura da imagem */
        object-fit: cover; /* Ajuste da imagem para cobrir o espaço */
    }

    .card-title {
        font-size: 1.25rem; /* Tamanho do título */
        margin-bottom: 0.5rem;
    }

    .card-text {
        color: #6c757d; /* Cor do texto */
    }

    .btn-primary {
        background-color: #007bff; /* Cor do botão primário */
        border-color: #007bff; /* Cor da borda do botão primário */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Cor do botão primário em hover */
            border-color: #0056b3; /* Cor da borda do botão primário em hover */
        }
</style>

<div class="container text-center">
    <div class="row">
        @foreach (Carro item in ViewBag.Carros)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@item.Imagem" class="card-img-top" alt="Imagem do carro">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text">@item.DescricaoCurta</p>
                        <a href="/Carro/Detail/@item.Id" class="btn btn-primary">Ver detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

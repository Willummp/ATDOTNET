@model IEnumerable<CarGallery.Models.Carro>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null)
{
    <div class="row">
        @foreach (var carro in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="@carro.Imagem" class="card-img-top" alt="Imagem do carro">
                    <div class="card-body">
                        <h5 class="card-title">@carro.Nome</h5>
                        <p class="card-text">@carro.DescricaoCurta</p>
                        <a href="@Url.Action("Details", "Carro", new { id = carro.Id })" class="btn btn-primary">Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Nenhum carro encontrado.</p>
}
